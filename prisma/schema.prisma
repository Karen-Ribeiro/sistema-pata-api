generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model adocoes {
  id          Int      @id @default(autoincrement())
  pet_id      Int      @unique
  usuario_id  Int
  data_adocao DateTime @default(now())
  pets        pets     @relation(fields: [pet_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
  usuarios    usuarios @relation(fields: [usuario_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model pets {
  id              Int            @id @default(autoincrement())
  nome            String         @db.VarChar(100)
  especie         String         @db.VarChar(100)
  data_nascimento DateTime       @db.Date
  descricao       String         @db.VarChar(255)
  tamanho         tamanhos?
  personalidade   personalidades?
  adotado         Boolean        @default(false)
  adocoes         adocoes?
}

model usuarios {
  id       Int       @id @default(autoincrement())
  nome     String    @db.VarChar(100)
  email    String    @db.VarChar(100)
  senha    String    @db.VarChar(100)
  telefone String    @db.VarChar(11)
  tipo     tipos?
  adocoes  adocoes[]
}

enum personalidades {
  calmo
  brincalhao
  independente
}

enum tamanhos {
  pequeno
  medio
  grande
}

enum tipos {
  usuario
  administrador
}
